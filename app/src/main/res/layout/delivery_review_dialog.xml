<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp">>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textSize="16sp" />
            <TextView
                android:id = "@+id/warning_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Please Choose Restaruant"
                android:layout_marginLeft="16sp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/review_dialog_restaurant_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/review_dialog_restaurant_list_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/review_dialog_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:scaleX=".7"
            android:scaleY=".7"
            android:stepSize="1"
            android:transformPivotX="0dp"
            android:transformPivotY="35dp"
            android:theme="@style/RatingBar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <ImageButton
                android:id="@+id/review_dialog_add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/white"
                android:src="@drawable/add_photo"
                android:visibility="gone"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_dialog_recycler_view"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_dialog_review"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/review_dialog_review_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints="Write Review of your previous Meal"
                android:inputType="textMultiLine"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:src="@drawable/edit"
                app:backgroundTint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/edit_cancel_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:src="@drawable/cancel"
                app:backgroundTint="#FFFFFF"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/remove_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:src="@drawable/delete"
                app:backgroundTint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:src="@drawable/cancel"
                app:backgroundTint="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
